extends ../layouts/common
block content
  h1 Transactions

  a.btn.btn-primary(href="/transactions/create") Create new transactions

  table.table
        tr
            th Book title
            th User name
            th Status
        each transaction in transactions
         tr
           td= transaction.bookTitle
           td= transaction.userName
           td
             a.btn.btn-light(href="/transactions/"+transaction.id+"/complete")= transaction.isCompleted
  nav
     ul.pagination.justify-content-center
      each page in pages
       li.page-item
        a.page-link(href='?page='+page)=page