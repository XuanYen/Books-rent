extends ../layouts/common
block content
  h1 Create transaction

  form(action="/transactions/create", method="POST")
    label Choose username
    select(name="userId")
      each user in users
        option(value=user.id)=user.name
    br
    abel Choose book title
    select(name="bookId")
      each book in books
        option(value=book.id)=book.title
    
    button Create