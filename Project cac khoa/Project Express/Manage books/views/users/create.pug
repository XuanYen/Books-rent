extends ../layouts/common
block content
  if errors
      each error in errors
          .alert.alert-danger=error
  h1 Create new user

  form(action="/users/create", method="POST")
    .form-group
      label(for="name") Name
      input.name.form-control(name="name", type="text", value=values? values.name:"")
    .form-group
      label(for="phone") Phone
      input.phone.form-control(name="phone", type="text", value=values? values.phone:"")
    .form-group
      label(for="email") Email
      input.email.form-control(type="email" name="email" value= values ? values.email : "")
    .form-group
      label(for="password") Password
      input.password.form-control(type="password" name="password" value= values ? values.password : "")

    button.btn.btn-primary Create