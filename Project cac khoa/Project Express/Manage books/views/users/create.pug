extends ../layouts/common
block content
  if errors
      each error in errors
          .alert.alert-danger=error
  h1 Create new user

  form(action="/users/create", method="POST")
    .form-group
      label Name
      br
      input.form-control(name="name", type="text", value=values? values.name:"")
    .form-group
      label Age
      br
      input.form-control(name="phone", type="text", value=values? values.phone:"")
    .form-group
            label(for="email") Email
            input.email.form-control(type="email" name="email" value= values ? values.email : "")

    button.btn.btn-primary Create